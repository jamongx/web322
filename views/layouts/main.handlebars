                    {{else}}
                        <li class="item"><a href="/shopping/customer">Shopping Cart</a></li>                    
                    {{/if}}                 
                {{else}}
                    <li class="item"><a href="/login">Login</a></li>
                    <li class="item"><a href="/registration">Registration</a></li>
                {{/if}}
            </ul>
        </div>
    </header>

    <main>
        {{{body}}}
    </main>

    <footer>
        <div class="flex-container2">
            <div class="social">
                <p>About us</p>
                <a href="https://facebook.com/jamongx"><i class="fa fa-facebook-square" style="font-size:20px;color:white;"></i></a>
                <a href="https://instagram.com/jamongx01"><i class="fa fa-instagram" style="font-size:20px;color:white;"></i></a>
                <a href="https://www.linkedin.com/in/jamongx"><i class="fa fa-linkedin-square" style="font-size:20px;color:white;"></i></a>
                <a href="https://github.com/jamongx"><i class="fa fa-github" style="font-size:20px;color:white;"></i></a>
            </div>

            <div class="foot-menu">
                <p>Our Menu</p>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/cuisines/all">All Cuisines</a></li>
                    <li><a href="/cuisines/korean">Korean Cuisine</a></li>
                    <li><a href="/cuisines/italian">Italian Cuisine</a></li>
                    <li><a href="/cuisines/mexican">Mexican Cuisine</a></li>
                    <li><a href="/cuisines/indian">Indian Cuisine</a></li>
                    {{#if authorized}}
                        <li class="item"><a href="/logout">Logout</a></li>
                        {{#if user.clerk}}
                            <li class="item"><a href="/dashboard/employee">Dashboard</a></li>
                        {{else}}
                            <li class="item"><a href="/shopping/customer">Shopping Cart</a></li>                    
                        {{/if}}                 
                    {{else}}
                        <li class="item"><a href="/login">Login</a></li>
                        <li class="item"><a href="/registration">Registration</a></li>
                    {{/if}}
                </ul>
            </div>

            <div class="subscribe">
                <form action="https://formspree.io/mdoljwzw" method="POST">
                    <p>Subscribe to newsletters</p>
                    <input id="name" type="text" name="name" placeholder="Enter Name">
                    <input id="email" type="email" name="_replyto" placeholder="Enter Email">
                    <input type="submit" value="SUBSCRIBE">
                </form>
            </div>
        </div>
        <div class="bottom">
            <center>
                <span class="credit">Created by Jaemo Yang</a> | </span>
                <i class="	fa fa-copyright" style="font-size:10;color:white;"> 2020 All Rights Reserved.</i>
